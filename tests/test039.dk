# Test macro definitions

macro foo {args} {
	puts "Macro 'foo' called with " args

	args@0 = :bar
	return args
}

proc bar {args} {
	puts "bar called with '" args "'"
}

foo 1 2 3 4 5


# Also test 'subify'
puts [subify :(a + 1) 1]
puts [subify :(foo + 1) :[foo]]
puts [subify :(foo + 1) :[bobo]]
puts [subify {var x = 42; return (a + b + x)} 3]

# And subifyOrDelay
