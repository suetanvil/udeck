# Test mprocs with default arguments

mproc mp1 {
	word foo
	sub 0 fn
	list ls [default :[a b c]]
	nothing [default nil]
	someNum [default 42]
} {
	puts foo
	puts fn
	puts ls
	puts nothing
	puts someNum
	puts "---"
}

mp1 foo {} [1 2 3] "some text" 1
mp1 foo {}
mp1 foo {} [this is a list]
mp1 foo {} [this is another list] "xxx"
mp1 foo {} [this is another list] nil


mproc mp2 {
	strict sub [x] fn
	word and [default :and]
	strict sub [x] fn2 [default {}]
} {
	puts [fn 1] " " and " " [fn2 2]
}

mp2 {value 42}
mp2 {value 42} and
mp2 {value 42} and {value 5}
puts "---"


mproc mp3 {
	strict sub [x] fn [default {value (x+11)}]
} {
	puts [fn 1]
}

mp3 {value (x + 33)}
mp3


mproc mp4 {
	strict symbol s [default :aSymbol]
} {
	puts "mp4: $s"
}

mp4
mp4 someOtherSymbol

mproc mp4a {
	symbol s [default :aSymbol]
} {
	puts "mp4a: $s"
}

mp4a notAStrictArg
mp4a [value 42]		# see, not strict


mproc mp5 {
	l [default :[1 2 3]]
} {
	puts "mp5: $l"
}

mp5
mp5 42
mp5 :[4 5 6]

mproc mp5a {
	list l [default :[1 2 3]]
} {
	puts "mp5a: $l"
}

mp5a
mp5a 42
mp5a [4 5 6]
mp5a (2+3)
