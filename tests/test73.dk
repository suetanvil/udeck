# Test intervals and 'say'
foreach r in [list (0 .. 5) (5 .. 0) (-3 .. -9) [range 23 26] (-3 .. 4)] {
	puts "Range " r.start " .. " r.end ":"
	foreach e in r {
		say " " e
	}
	say "\n"
}

say "Reverse: "
for r in (5 .. 1) {
	say r " "
}
puts

